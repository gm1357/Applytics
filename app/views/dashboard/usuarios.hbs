            <a class="nav-link" href="/dashboard/crashes">Crashes</a>
            <a class="nav-link active" href="/dashboard/usuarios">Usuarios</a>
        </nav>

        <hr>

        <div class="index">
            <div class="row justify-content-around">
                <div class="col col-md-11">
                    <table id="crashes" class="table table-striped responsive table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Sexo</th>
